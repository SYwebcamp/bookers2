<div class="container">
  <% if @book.errors.any? %>
    <h2>
      <%= @book.errors.count %>errors prohibited this obj from being saved:</br>
    </h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <!--User info-->
      <table class="table">
          <h1>User info</h1>
          <thead>
              <tr>
                  <th class="image"><%= image_tag current_user.get_profile_image(100,100) %></</th>
              </tr>
              <tr>
                  <th class="name">name</th>
                  <th><%= current_user.name %></th>
              </tr>
              <tr>
                  <th class="introduction">introduction</th>
                  <th><%= current_user.introduction %></th>
              </tr>
          </thead>
            <th>
            <%= link_to edit_user_path(current_user.id), class: "btn" do %>
              <span class="fas fa-user-cog"></span>
            </th>
            <% end %>
      </table>
      <!--New book-->
      <h1>New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body, maxlength: "200" %>
          <p><button type="submit" class="btn btn-primary bg-success">Create Book</button></p>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <!--Book user index-->
        <table class="table">
          <h1>Users</h1>
          <thead>
            <tr>
                <th class="image">Image</th>
                <th class="naem">Name</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                  <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>

          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>