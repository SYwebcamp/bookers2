<table class="table">
  <h1>Books</h1>
  <thead>
    <tr>
        <th class="image"></th>
        <th class="title">Title</th>
        <th class="opinion">Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% books.each do |book| %>
    <tr>
     <td>
        <%= link_to user_path(book.user.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
     </td>

      <td>
        <%= link_to book.title, book_path(book.id) %>
        </td>
      <td><%= book.body %></td>
    </tr>

  <% end %>
  </tbody>
</table>