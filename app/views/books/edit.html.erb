<!--book edit-->
<div class="container">
    <div class="text-center mt-3">
      <% if @book.errors.any? %>
        <h2>
          <%= @book.errors.count %>error prohibited this obj from being saved:</br>
        </h2>
        <% @book.errors.full_messages.each do |message| %>
          <ul>
           <li><%= message %></li>
         </ul>
        <% end %>
      <% end %>
    </div>

  <div class="row">
    <div class="col-sm-1 col-md-4"></div>
    <div class="col-sm-11 col-md-8">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <p><label for="inputTitle">Title</label></p>
        <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
        <p><label for="inputOpinion">Opinion</label></p>
        <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>
        <p><%= f.submit "Update Book", class: "btn btn-primary bg-success" %></p>

      <% end %>
      <span><%= link_to "Show", book_path(@book) %></span>
      <span>|</span>
      <span><%= link_to "Back", books_path %></span>
    </div>
  </div>
</div>